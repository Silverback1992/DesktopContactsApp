<Window x:Class="DesktopContacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContacts"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize">
    <Grid Margin="10">
        <StackPanel>
            <Button x:Name="createNewContactButton"
                    Click="createNewContactButton_Click"
                    Content="Create New Contact"/>
            <Button x:Name="readContactsButton"
                    Click="readContactsButton_Click"
                    Content="Display Contacts" />
            <Button x:Name="exitButton"
                    Click="exitButton_Click"
                    Content="Exit"
                    Grid.Row="1" />
        </StackPanel>
    </Grid>
</Window>
